@model ExpenseCategory
@{
    ViewData["Title"] = "Edit";
}

<form asp-action="Edit" asp-controller="Categories" method="post">
    <input type="hidden" asp-for="ExpenseCategoryId" />
    <div class="form-group row my-1">
        <label class="col-form-label col-form-label-sm col-2">Category Name</label>
        <div class="col-6">
            <input type="text" class="form-control form-control-sm" asp-for="CategoryName" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row my-1">

        <div class="col-10 offset-2">
            <button type="submit" class="btn btn-success">Update</button>
        </div>
    </div>
</form>
<a asp-action="Index" class="btn-link">Back to list</a>

@section scripts {
    <script src="~/libs/jquery/jquery.min.js"></script>
    <script src="~/libs/validation/jquery.validate.min.js"></script>
    <script src="~/libs/validation/jquery.validate.unobtrusive.min.js"></script>
}

