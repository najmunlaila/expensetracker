<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <environment include="Development">
        <link href="~/libs/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
        <script src="~/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
        <style>
            body {
                padding-top: 70px;
            }
        </style>
        @await RenderSectionAsync("styles", false)
    </environment>

</head>
<body>
    <nav class="navbar navbar-expand-md navbar-light bg-light fixed-top border-bottom">
        <div class="container-fluid">
            <span class="navbar-brand" href="#">Demo</span>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav" aria-controls="nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="nav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a asp-controller="Categories" asp-action="Index" class="nav-link">Expnese Catgories</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Expenses" asp-action="Index" class="nav-link">Expenses</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        @RenderBody()
    </div>
    <footer class="container-fluid">

    </footer>
    <environment include="Development">

        @await RenderSectionAsync("scripts", false)
    </environment>
</body>
</html>
